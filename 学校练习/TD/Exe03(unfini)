# include <stdio.h>

int main(){
    float a;
    float b;
    float c;
    int d;
    printf("Écrivez 3 nombres à virgules\n");

    printf("a = ");
    scanf("%f", &a);

    printf("b = ");
    scanf("%f", &b); 
   
    printf("c = ");
    scanf("%f", &c);

    printf("La moyenne est: %f\n", (a + b +c)/3);
    d = (a + b +c)*100/3;
    printf("La moyenne est: %f\n", d/100);
    return 0;
}
