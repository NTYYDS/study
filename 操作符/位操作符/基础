#include<stdio.h>

int main(){
    int a = 3;
    int n = a >> 1;//二进制向右移动一位，首位补符号（算数右移/逻辑右移 看编译器）
    printf("%d\n", n);
    int b = a << 1;//二进制向左移动一位，末位补0
    printf("%d\n", b);    
    int c = a & b;//二进制按位与(两个位都为1时，结果才为1)
    printf("%d\n", c);
    int d = a | b;//二进制按位或(两个位都为0时，结果才为0)
    printf("%d\n", d);
    int e = a ^ b;//二进制按位异或(两个位相同为0，相异为1)
    printf("%d\n", e);
    return 0;
}
