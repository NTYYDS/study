#include<stdio.h> 


int BinarySearch (int arr[], int key, int sz){

	int left = 0;
	int right = sz - 1;

	int count = 0;
  	if(key < arr[left] || key > arr[right])
	{
		printf("查无此数");
		return 0;
	}
	while(left <= right){
		int mid = (left + right)/2;	
		if(arr[mid] > key){
			right = mid - 1;
		}
		else if(arr[mid] < key){
			left = mid + 1;
		}
		else if(arr[mid] == key){
			printf("数字在第%d位", mid + 1);
			count++;
			break;
		}
	}

	if(left > right)
		printf("查无此数"); 
	return 0;
}
 
 
int main (){
	int arr[] = {1,2,3,4,5,6,7};
	int sz = (sizeof(arr)/sizeof(arr[0]));
	int n;
	printf("输入要寻找的数字：");
	scanf("%d", &n); 
	BinarySearch(arr,n,sz);

	return 0;

}
